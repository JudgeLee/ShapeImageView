<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#555"
  android:gravity="center_horizontal"
  android:orientation="vertical">


  <com.judgelee.shapeimageview.ShapeImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:src="@drawable/hikaru"
    app:imageShape="rectangle"
    app:imageText="进藤光"
    app:imageTextColor="#FF000000"
    app:imageTextSize="14sp"
    app:shapeBorderColor="#FFFFFF"
    app:shapeBorderWidth="1dp" />

  <com.judgelee.shapeimageview.ShapeImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="5dp"
    android:src="@drawable/kudou_shinichi"
    app:imageShape="circle"
    app:imageText="工藤新一"
    app:imageTextColor="#FF000000"
    app:imageTextSize="14sp"
    app:shapeBorderColor="#FF000000"
    app:shapeBorderWidth="1dp" />


  <com.judgelee.shapeimageview.ShapeImageView
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:src="@drawable/itunes"
    app:imageShape="oval"
    app:shapeBorderColor="#FF0000"
    app:shapeBorderWidth="1dp" />

  <com.judgelee.shapeimageview.ShapeImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:src="#FF1493"
    app:imageShape="rectangle"
    app:imageText="指定颜色"
    app:shapeBorderColor="#00FF00"
    app:shapeBorderWidth="1dp" />

  <com.judgelee.shapeimageview.ShapeImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:src="@drawable/naruto"
    app:imageShape="roundRectangle"
    app:shapeBorderColor="#FFFFFF"
    app:shapeBorderWidth="1dp"
    app:shapeRadiusX="5dp"
    app:shapeRadiusY="5dp" />


</LinearLayout>